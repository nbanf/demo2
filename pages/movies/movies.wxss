/* pages/movies/movies.wxss */

.movies_wrap{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.movies_picture{
  width: 140rpx;
  height: 140rpx;
}
.movies_details{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}
.movies_title{
  width: 80%;
  font-size: 32rpx;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movies_year{
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}
.movies_user{
  font-size: 30rpx;
  color: #333;
}
.movies_num{
  font-size: 40rpx;
  color: red;
  font-weight: bold;
}
